    <!-- OWL Car -->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <!-- Show More js -->
    <script src="~/assets/js/showmoreitems.min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    
