@model IEnumerable<HomeProductVM>
<!-- slider section start -->
<partial name="_SliderPartial"/>
<!-- slider section end -->

@{
    var list = ViewBag.newestProduct as List<HomeProductVM>;
    var listBestSeller = ViewBag.bestSeller as List<HomeProductVM>;
}
<!-- product section start -->
<div class="product_section mb-50">
    <div class="container">
        <div class="product_tab_button">
            <ul class="nav justify-content-center" role="tablist" id="nav-tab">
                <li>
                    <a class="active" data-toggle="tab" href="#products" role="tab" aria-controls="products"
                       aria-selected="false">
                        New Products
                    </a>
                </li>
                <li>
                    <a data-toggle="tab" href="#seller" role="tab" aria-controls="seller" aria-selected="false">
                        Best Seller
                    </a>
                </li>
                <li>
                    <a data-toggle="tab" href="#sales" role="tab" aria-controls="sales" aria-selected="false">
                        On
                        Sales
                    </a>
                </li>
            </ul>
        </div>
        <div class="tab-content product_container">
            <div class="tab-pane fade show active" id="products" role="tabpanel">
                <div class="product_gallery">
                    <div class="row">
                        @foreach (var item in list)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <article class="single_product wow fadeInUp" data-wow-delay="0.1s"
                                         data-wow-duration="1.1s">
                                    <figure>
                                        <div class="product_thumb">
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                                <img src="@item.ImgUrl"
                                                     alt="">
                                            </a>
                                            <div class="label_product">
                                                <span class="label_sale">Sale</span>
                                            </div>
                                        </div>
                                        <figcaption class="product_content">
                                            <h4>
                                                <a asp-controller="Product"
                                                   asp-action="Details"
                                                   asp-route-id="@item.Id"
                                                   style="white-space: nowrap;">
                                                    @item.Name.Truncate(10)
                                                </a>
                                            </h4>
                                            <div class="price_box">
                                                <span class="old_price">@item.Price.ToString("c")</span>
                                                <span class="current_price">$129.99</span>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </article>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="seller" role="tabpanel">
                <div class="product_gallery">
                    <div class="row">
                        @foreach (var item in listBestSeller)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <article class="single_product wow fadeInUp" data-wow-delay="0.1s"
                                         data-wow-duration="1.1s">
                                    <figure>
                                        <div class="product_thumb">
                                            <a href="single-product.html">
                                                <img src="@item.ImgUrl"
                                                     alt="">
                                            </a>
                                            <div class="label_product">
                                                <span class="label_sale">Sale</span>
                                            </div>
                                        </div>
                                        <figcaption class="product_content">
                                            <h4>
                                                <a href="single-product.html">
                                                    @item.Name
                                                </a>
                                            </h4>
                                            <div class="price_box">
                                                <span class="old_price">@item.Price.ToString("c")</span>
                                                <span class="current_price">$129.99</span>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </article>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="sales" role="tabpanel">
                <div class="product_gallery">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <article class="single_product wow fadeInUp" data-wow-delay="0.1s"
                                         data-wow-duration="1.1s">
                                    <figure>
                                        <div class="product_thumb">
                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                <img src="@item.ImgUrl"
                                                     alt="">
                                            </a>
                                            <div class="label_product">
                                                <span class="label_sale">Sale</span>
                                            </div>
                                        </div>
                                        <figcaption class="product_content">
                                            <h4>
                                                <a asp-action="Details" asp-route-id="@item.Id">
                                                    @item.Name
                                                </a>
                                            </h4>
                                            <div class="price_box">
                                                <span class="old_price">@item.Price.ToString("c")</span>
                                                <span class="current_price">$129.99</span>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </article>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- product section end -->

<partial name="_InformationPartail"></partial>